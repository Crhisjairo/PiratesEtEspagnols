<Window x:Class="Tp3.MenuPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tp3"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="DeepSkyBlue"
        Title="MenuPrincipal" Height="600" Width="600">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label Content="Pirates et Espagnols" Padding="0, 100, 0, 0" FontSize="50"/>
        </StackPanel>

        <StackPanel VerticalAlignment="Center" Margin="200,218,200,217" >
            <Button Style="{StaticResource ButtonMenu}" Content="Commencer" Click="OnClickCommencer"></Button>
            <Button Style="{StaticResource ButtonMenu}" Content="Quitter" Click="OnClickQuitter"></Button>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Label Content="Christian C. et Adriana G." Padding="0, 0, 10, 0" FontSize="20" FontFamily="Times New Roman"/>
        </StackPanel>
    </Grid>
</Window>
